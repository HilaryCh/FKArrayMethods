! file epi_dist_out.shc
!      ============
!
! alternated version of Simon Schneider, writes epidistances out to file


sdef dist      ! distance
sdef azim      ! azimuth
sdef cnt 1     ! counter
sdef slat      ! station latitude
sdef slon      ! station longitude

loop_start:
   if  "cnt gti $dsptrcs  goto/forward loop_exit:
   call statloc ^station("cnt) &slat &slon
   call locdiff "slat "slon ^lat(1) ^lon(1) &dist &azim
   calc/fmt=<%4.2@f> r &dist = "dist
   echo_epi "dist ^station("cnt)
   calc i &cnt = "cnt + 1
goto loop_start:
loop_exit:


return
